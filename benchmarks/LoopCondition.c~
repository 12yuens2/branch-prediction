#include <stdio.h>
#include <stdlib.h>

/**
 * Recursively defined function from CS3052 notes on decidability
 */
long f(int i)
{
    printf("%d\n", i);
    if (i == 1)
    {
	return i;
    }
    else if (i % 2 == 1 && i >= 3)
    {
	return f(3*i + 1);
    }
    else if (i % 2 == 0)
    {
	return f(i/2);
    }
    else
    {
	return 0;
    }
}



int main(int argc, char* argv[])
{
    int count = atol(argv[1]);

    int result = f(count);
    printf("result: %d\n", result);
    
    return 0;
}


